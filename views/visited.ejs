<% layout('layouts/boilerplate')%>

    <h1  class="row justify-content-center mb-3">Visited Destinations</h1>


    <% for(let destination of destinations) { %> 
    
    <div class="card mb-3 " style="max-width: 920px;">
        <div class="row g-0 row align-items-center">
            <a class="col-md-4 " href="/destination/<%=destination._id%>?isVisited=true">
                <img src=<%=destination.images[0] %>  class="shadow" alt="..." style="max-width: 100%;">
            </a>
            <div class="col-md-8 container">
                <div class="card-body">
                    <h5 class="card-title"><b>Place:</b><%=destination.title%> <br><b>location:</b><%=destination.location%></h5>
                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional
                        content. This content is a little bit longer.</p>
                    <a href="/destination/<%=destination._id%>?isVisited=true">
                        <button class="btn btn-info btn-sm" >Check Destination</button>
                    </a>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                </div>
            </div>
        </div>
    </div>
    <% } %> 
