<!DOCTYPE html>
<html lang="en">
    <% layout('layouts/boilerplate')%>

    
    <form action="/register" method="POST">
        <div>
            <label for="user_name">UserName:</label>
            <input id="user_name" type="text" name="register[username]">
        </div>
        <div>
            <label for="password">Email_Id:</label>
            <input id="password" type="text" name="register[email]">
        </div>
        <div>
            <label for="password">Password:</label>
            <input id="password" type="text" name="register[password]">
        </div>
        <div>
            <button type='submit' >Login</button>
        </div>
    </form>

    <script>
        window.addEventListener("keydown", function(e) {
            if(e.key==='Enter' && e.code==='Enter')
                if(e.target.nodeName=='INPUT' && (e.target.type=='text' ||e.target.type=='email' )){
                    e.preventDefault()
                    return false
                }
  
}, true);
    </script>
